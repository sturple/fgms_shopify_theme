/************** Navigation header ***********/
#header-top-parent {
    z-index: 999;
    background-color: rgba(255,255,255,0.75);
    @include transition(0.2s);
    &:hover {
        @include transition(0.8s);
        background-color: rgba(255,255,255,1);
    }
	

}

	.search-header {
		button {
			line-height: 18px;
			background: rgba(255,255,255,1);
			border: 1px solid #fff;
			padding: 8px 12px;
			@include radius(4px !important) ;
			margin-left: -4px !important;
			i {
				color: $link-color;
			}
			
			&:hover {
				i {
					color: $link-color-hover;
				}
			}
		}
		input {
			padding: 6px;
			font-size: 17px;
			line-height: 22px;
			border: 1px solid #fff;
			font-weight: 300;

		}
		.searchbox-close {			
			input {
				@include transition(0.4s);
				width: 0 !important;
			/*	@include transform-scale(0,1);*/
				padding: 6px 0;					
			}
	
		}
		.searchbox-open  {
			
			button {
				margin-left : 0px !important;				
				@include radius(0 4px 4px 0 !important) ;
			}
			input {
				@include transition(0.7s);
				/*@include transform-scale(1,1);*/
				width: 225px !important;
				
			}
			
		}		
	}



.header-logo {
    margin: $theme-padding-secondary-half 0;
  
    img {
        max-width: 100%;
        @include transition(0.75s);
        
       @include transform-scale(1,1);        
       
    }
}
.sticky-scroll-up {
    &#header-top-parent {
        background-color: rgba(255,255,255,0.95);
    }
    .header-logo {
  
        img {
            @include transition(0.75s);
            @include transform-scale(0.65,0.65); 
           max-height: 80px;
        }
    }
}


.nav.navbar-nav {
    
    position: relative;
    text-transform: uppercase;
    >li{
        padding: 15px;
        > a  {
            padding: 0;
    
            &:hover, &:focus {
                background-color: transparent;
            } 
        }
        li {
            > a {
                padding: 4px 20px;
                text-transform: capitalize;
            }
            @include a-border(#666,transparent, $link-color-hover, transparent,'>'); 
        }
           
         
    }    

}

#navigation-wrapper {
	.nav.navbar-nav {
		margin: 0 0 $theme-margin-base;
		>li{
			padding: 4px 10px;
			> a  {
					padding: 0;					
					&:hover, &:focus {
							background-color: transparent;
					} 
			}    			
			@include a-border(#666,transparent, #666, transparent,'>'); 
			&.active {
				a {
					color: $link-color-hover;
				}
			}
			
		}
		>li:last-child {        
			padding-right: 0;

		} 		
		
	}   
	.navbar {
		margin: 0  $theme-margin-base 0;
		.navbar-toggle {
			float: none;
			border-bottom: none !important;
			.icon-bar {
				background-color: $link-color;
			}
		}			
	}
	@media  screen and (min-width: $screen-sm-max) {	
    @include flexbox();
    align-self: center;
    justify-content: flex-end;	
		.navbar {
			margin: 0;
		}		
		.nav.navbar-nav {
			margin: 0;
			>li{
				padding: 15px 8px;
				> a {
					font-size: 0.85em;
				}
				@include a-border(#666,transparent, #666, #666,'>'); 
			}
			
		}
	
	}
	@media  screen and (min-width: 1500px) {
		.nav.navbar-nav { 
			>li{
				padding: 15px;
				> a  {                  
						font-size: 1.2em;                  
				}        
			}
		}
	}	
	
}

.dropdown-menu>.active>a, .dropdown-menu>.active>a:focus, .dropdown-menu>.active>a:hover {
	background-color: transparent;
	color: $link-color-hover !important;
}

.top-header-nav, .footer-nav  {
    .nav.navbar-nav {
        >li{
            @include a-border(#fff,transparent, #fff, #fff,'>');     
        }
    }      
}
.top-header-nav {
		float: none;
		display: none;
		visibility: hidden;
    .nav.navbar-nav {
			
        

    }
	

	
	@media  screen and (min-width: $screen-sm-max) {		
		display: block;
		visibility: visible;
		float: right;
		
        > li:last-child {
            padding-right: 0;
        }
        > li:first-child {
            padding-left: 0;
        }		
	}
	
}

.footer-nav  {
    .navbar {
        @include flexbox();
    }
    .nav.navbar-nav {
        margin: 0 auto;
			>li {
				padding-top: 2px;
				padding-bottom: 2px;

			}
    }
	@media screen and (min-width: $screen-sm-max){
	 .nav.navbar-nav {				
			>li {		
				padding: 2px 6px;
		 	}
		}
	}	
	@media screen and (min-width: $screen-md-max){
	 .nav.navbar-nav {				
			>li {		
				padding: 2px 15px;
		 	}
		}		
	}
	
	@media  screen and (min-width: $screen-lg-max) {	
    .nav.navbar-nav {
        @include flexbox();
        align-self: center;
        justify-content: center;;
       
    }		
		
	}
}

.sticky-scroll-down {
	@include opacity(0);
	@include transition(0.75s);
}
.sticky-scroll-up {
	@include opacity(1);
	@include transition(0.25s);
}

