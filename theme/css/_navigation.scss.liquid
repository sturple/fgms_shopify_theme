/************** Navigation header ***********/
#header-top-parent {
    z-index: 999;
    background-color: rgba(255,255,255,0.75);
    @include transition(0.2s);
    &:hover {
        @include transition(0.8s);
        background-color: rgba(255,255,255,1);
    }
}





.header-logo {
    margin: $theme-padding-secondary-half 0;
  
    img {
        max-width: 100%;
        @include transition(0.75s);
        
       @include transform-scale(1,1);        
       
    }
}
.sticky-scroll-up {
    &#header-top-parent {
        background-color: rgba(255,255,255,0.95);
    }
    .header-logo {
  
        img {
            @include transition(0.75s);
            @include transform-scale(0.65,0.65); 
           max-height: 80px;
        }
    }
}


.nav.navbar-nav {
    
    position: relative;
    text-transform: uppercase;
    >li{
        padding: 15px;
        > a  {
            padding: 0;
            font-size: 0.9em;
            &:hover, &:focus {
                background-color: transparent;
            } 
        }
        li {
            > a {
                padding: 10px 20px;
                text-transform: capitalize;
            }
            @include a-border(#666,transparent, $link-color-hover, transparent,'>'); 
        }
           
         
    }    

}

.navbar.main {
		.navbar-toggle {
			float: none;
			border-bottom: none !important;
			.icon-bar {
				background-color: $link-color;
			}
		}	
    .nav.navbar-nav { 

        position: relative;
        text-transform: uppercase;
        >li{
            padding: 15px 10px;
            > a  {
                padding: 0;
                font-size: 0.7em;
                &:hover, &:focus {
                    background-color: transparent;
                } 
            }        
        }
        >li:last-child {        
                padding-right: 0;
            
        }         
    }    
    @media  screen and (min-width: 1500px) {
        .nav.navbar-nav { 
            >li{
                padding: 15px;
                > a  {                  
                    font-size: 0.9em;                  
                }        
            }
        }
    }
}

#navigation-wrapper {

    .nav.navbar-nav {
        >li{
            @include a-border(#666,transparent, #666, #666,'>');  
						&.active {
							a {
								color: $link-color-hover;
							}
						}
        }
    }   
	@media  screen and (min-width: $screen-sm-max) {	
    @include flexbox();
    align-self: center;
    justify-content: flex-end;	
	}
}

.dropdown-menu>.active>a, .dropdown-menu>.active>a:focus, .dropdown-menu>.active>a:hover {
	background-color: transparent;
	color: $link-color-hover !important;
}

.top-header-nav, .footer-nav  {
    .nav.navbar-nav {
        >li{
            @include a-border(#fff,transparent, #fff, #fff,'>');     
        }
    }      
}
.top-header-nav {
		float: none;
		display: none;
		visibility: hidden;
    .nav.navbar-nav {
			
        

    }
	

	
	@media  screen and (min-width: $screen-sm-max) {		
		display: block;
		visibility: visible;
		float: right;
		
        > li:last-child {
            padding-right: 0;
        }
        > li:first-child {
            padding-left: 0;
        }		
	}
	
}

.footer-nav  {
    .navbar {
        @include flexbox();
    }
    .nav.navbar-nav {
        margin: 0 auto;
			>li {
				padding-top: 2px;
				padding-bottom: 2px;
				display: block;
				float: none;
			}
    }
	@media  screen and (min-width: $screen-lg-max) {	
    .nav.navbar-nav {
        @include flexbox();
        align-self: center;
        justify-content: center;;
       
    }		
		
	}
}

.sticky-scroll-down {
	@include opacity(0);
	@include transition(0.75s);
}
.sticky-scroll-up {
	@include opacity(1);
	@include transition(0.25s);
}