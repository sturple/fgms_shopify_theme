/************** Navigation header ***********/



.nav.navbar-nav {
    
    position: relative;
    text-transform: uppercase;
    >li{
        padding: 15px;
        > a  {
            padding: 0;    				
            &:hover, &:focus {
                background-color: transparent;
            } 
        }
        li {
            > a {
                padding: 4px 20px;
                text-transform: capitalize;
            }
            @include a-border(#fff,transparent, $link-color-hover, transparent,'>'); 
        }
           
         
    }    

}

#navigation-wrapper {
	.dropdown-menu {  
		z-index: 11000;
		background-color: #1C3E94;
		>li {
			>a {
				text-transform: uppercase;
				&:focus, &:hover {
					background-color: transparent;
				}
			}
		}
 	
		
	}
	.nav.navbar-nav {
		margin: 0 0 $theme-margin-base;
		>li{
			padding: 4px 10px;
			> a  {
					padding: 0;					
					&:hover, &:focus {
							background-color: transparent;
					} 
			}    			
			@include a-border(#666,transparent, #666, transparent,'>'); 
			&.active {
				a {
					color: $link-color-hover !important;
				}
			}
			
		}
		>li:last-child {        
			padding-right: 0;

		} 		
		
	}   
	.navbar {
		margin: 0  $theme-margin-base 0;
		.navbar-toggle {
			float: none;
			border-bottom: none !important;
			.icon-bar {
				background-color: $link-color;
			}
		}			
	}
	@media  screen and (min-width: $screen-sm-max) {	
    @include flexbox();
    align-self: center;
    justify-content: flex-end;	
		.navbar {
			margin: 0;
		}		
		.nav.navbar-nav {
			margin: 0;
			>li{
				padding: 15px 8px;
				> a {
					font-size: 0.85em;
				}
				@include a-border(#1C3E94,transparent,  $link-color-hover, transparent,'>'); 
			}
			
		}
	
	}
	@media  screen and (min-width: 1500px) {
		.nav.navbar-nav { 
			>li{
				padding: 15px;
				> a  {                  
						font-size: 1em;                  
				}        
			}
		}
	}	
	
}

.dropdown-menu>.active>a, .dropdown-menu>.active>a:focus, .dropdown-menu>.active>a:hover {
	background-color: transparent;
	color: $link-color-hover !important;
}

.top-header-nav, .footer-nav  {
    .nav.navbar-nav {
        >li{
            @include a-border(#fff,transparent, #fff, #fff,'>');     
        }
    }      
}
.top-header-nav {
		float: none;
		display: none;
		visibility: hidden;
    .nav.navbar-nav {
			
        

    }
	

	
	@media  screen and (min-width: $screen-sm-max) {		
		display: block;
		visibility: visible;
		float: right;
		
        > li:last-child {
            padding-right: 0;
        }
        > li:first-child {
            padding-left: 0;
        }		
	}
	
}

.footer-nav  {
	margin-top: $theme-margin-base * 2;
	&.nav-centered {
		.navbar {
				@include flexbox();
		}		
	}
	&.nav-right-bottom {
		.navbar {
			
		}
	}

	.nav.navbar-nav {
			margin: 0 auto;
		>li {
			padding-top: 2px;
			padding-bottom: 2px;
			&:first-child {
				padding-left: 0px;
			}

		}
	}
	@media screen and (min-width: $screen-sm-max){
	 .nav.navbar-nav {				
			>li {		
				padding: 2px 6px;
		 	}
		}
	}	
	@media screen and (min-width: $screen-md-max){
		
	 .nav.navbar-nav {				
			>li {		
				padding: 2px 15px;
		 	}
		}		
	}
	
	@media  screen and (min-width: $screen-lg-max) {	
		margin-top: 0;
		&.nav-centered {
			.nav.navbar-nav {
					@include flexbox();
					align-self: center;
					justify-content: center;;

			}	
		}
	&.nav-right-bottom {
		.navbar {
			position: absolute;
			bottom: 0;
			right: 0;
			li:last-child {
				padding-right: 0;
			}
		}
	}
		
		
	}
}

.sticky-scroll-down {
	@include opacity(0);
	@include transition(0.75s);
}
.sticky-scroll-up {
	@include opacity(1);
	@include transition(0.25s);
}

