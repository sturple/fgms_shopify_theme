
/***************** SITE CSS *************************************/


html {}
body {	
	position: relative;
	font-family: Roboto, sans-serif;
	color: $body-color;
	line-height: 1.56em;
	letter-spacing: 0.05em;
    font-size: 18px;
    font-weight: 400;

    &.fonts-loaded{ p, ul, h1, h2, h3, h4, h5, a,i, blockquote {@include opacity(1);}}
}


h1, h2, h3, h4, h5, p, ul, ol{
	margin: $reset-margin;
} 

h1, h2, h3, h4, h5,.h1,.h2,.h3 {
	margin: $headings-margin;
	font-weight: 700;
}

h1, .h1  {
    font-size: 3em;
   
    line-height: 1em;
	margin: 0 0 36px;
    text-transform: uppercase;
	color: $h1-color;
}

h1.home-page {
	
}
.h1-pre, .h1-sub {
	display: block;
}

.h1-pre {
	@include font-size($h1-font-size, 0.6);
}

.h1-sub {
	@include font-size($h1-font-size, 0.6);
}

h2,.h2 { 
	font-size: 2.4em; 
	padding: 24px 0 0;;
	margin-bottom: 12px;
    
    text-transform: uppercase;

	color: $h2-color;
}

h2.tab, h3.tab, h4.tab {
	padding-top: 0;
}

h3,.h3 { 
	font-size: 1.6em;
	padding: $h3-padding;
	color: $h3-color;
	text-transform: uppercase;
	
}


h4,.h4 { 
	@include font-size($h4-font-size); 
	padding: $h4-padding;
	color: $h4-color;
}

h5,.h5 { 
	@include font-size($h5-font-size);  
	padding: $h5-padding;
	color: $h5-color;
}


p {
	margin-bottom :$p-margin-bottom ;
	letter-spacing: 0;
}


blockquote ,h1.blockquote, h2.blockquote, .archive-meta p, .intro-text {
	font-size: 1.6em;
	font-family: Overlock, cursive; 
	line-height: $blockquote-line-height;	
	border: 0; 
	padding: 0; 
	text-transform: none;
	margin-bottom: 36px;
 
}
.archive-meta p {
    margin: 0 0 24px;
}
h1.blockquote{margin-bottom: 36px;}
blockquote p {  margin: 0 0 6px;  padding: 0;}
blockquote .cite {  @include font-size(1.4); margin: 0;}
*:focus,a:focus,.btn:focus, .btn:active:focus, .btn.active:focus, .btn.focus, .btn.focus:active, .btn.active.focus{outline: none;}
.align-right-lg, .align-right-md, .align-right-sm, .align-right-xs {text-align: right;} 
.footer-form .error-message, .footer-form .input-error-message {color: #fff;}
.error-message.show-error-message , .input-error-message.show-error-message{display: block; }
.error-message, .input-error-message {font-size: 13px; font-size: 1.3rem; color: #990000;  display: none; padding-left: 2px;}
.has-error {
   input, textearea, select {background-color: #FBE3E4;}
}
ul {list-style: none;padding:0;margin:0;}

.line-separator-bottom {border-bottom: 1px dotted #ccc; margin-bottom: 28px !important; padding-bottom: 28px !important;}
.no-line-separator{ margin-bottom: 12px}
.separator {margin: 0 4px;}
