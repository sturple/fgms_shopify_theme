/********** Custom Bullets ******************/


ul {
		

	
	&.B_crumbBox {
		i {
			font-size: 0.8em;
			position: relative;
			top: 1px;
			left: 2px;
		}
		line-height: 1em; padding: 0;
		li {  display: inline;  font-size: 11px; font-size: 1.1rem;  list-style-type: none;  text-transform: none;  padding: 0; margin: 0; }
	}
	&.rss-feed-wrapper {
		list-style: none;
		padding-left:0 !important;
		margin-left: 0 !important;
		li {padding-left: 4px !important;}
		.rss-feed-row {
			margin-bottom: 12px;
			padding-bottom: 14px; 
			border-bottom: 1px dotted #ccc;
			
			.feed-title {font-size: 16px;}
			.feed-date {font-size: 13px; margin-bottom: 4px;}
			.feed-category {font-size: 12px; font-style: italic;}
			.feed-description {font-size: 13px; line-height: 1.4em; font-style: italic;}
			&:last-child {border-bottom: 0; padding-bottom: 0; }
		}
	}	

}
ol {margin-bottom: 24px; padding: 12px 0 0 24px; line-height: 1.6em;
	li {
		margin: 0 12px 12px 16px;
		padding-left: 12px;
		ul {
			margin-top: 10px;
			li { list-style-image: none; margin: 0 0 10px 26px; padding-left: 6px; }
		}
	}
}
	


/************** Containers *********/
#outer-container { 
	margin: 0 auto;  	
	position: relative;  
	width: 100%;  
	z-index: 2;
	background-color: transparent;
}
.column-wrapper {

    
}







.icon-your-cart i {margin-right: 6px; font-size: 24px;}
.icon-your-account i {margin-right: 6px; font-size: 24px;}



.embed-responsive {
  position: relative;
  display: block;
  height: 0;
  padding: 0;
  overflow: hidden;
}
.embed-responsive .embed-responsive-item,
.embed-responsive iframe,
.embed-responsive embed,
.embed-responsive object,
.embed-responsive video {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}
.embed-responsive-16by9 {
  padding-bottom: 56.25%;
}
.embed-responsive-4by3 {
  padding-bottom: 75%;
}


