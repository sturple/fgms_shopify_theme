

/*this is because shopify is stupid*/
.selector-wrapper {
	content: " ";
    display: table;
	clear: both;
	margin-left: -15px;
	margin-right: -15px;
	width: 100%;
	margin-bottom: 8px;
	* {
		float: left;
		min-height: 1px;
		padding-left: 15px;
		padding-right: 15px;
		position: relative;
		
		
	}
	label {		
		width: 23%;
		position: relative;
		top: 6px;


	}
	select {
		
		background-color: #fff;
		background-image: none;
		border: 1px solid #ccc;
		@include radius(4px);
		@include box-shadow(0 1px 1px rgba(0, 0, 0, 0.075) inset);
		color: #555;		
		@include font-size(1.4);
		height: 34px;
		line-height: 1.42857;
		padding: 6px 12px;
		transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
		width: 75%;		
		
	}
}


.pagination {
	line-height: 1.5em;
	> * {margin-right: 4px;}
	i {
		@include font-size(2.4);
		vertical-align: bottom;
		color: #ccc;
		cursor: pointer;		
		&:hover {color: $link-color;}
	}		
	.badge {
		@include radius(13px);
		background-color: #ccc;
		@include font-size(1.5);
		font-weight: bold;
		&:hover {			
			background-color: $link-color-hover; 
		}
		&.no-hover{
			&:hover{background-color: #ccc;;}
		
		}
		
		&:hover a {
			color: #fff !important;
			@include transition-color-simple( 0s, linear);
		}
		a {
			&:hover {
				color: #fff !important;
				@include transition-color-simple( 0s, linear);
			}
			
		}
		&.active {
			color: #fff;
			background-color: $link-color;
		}
	}
}
