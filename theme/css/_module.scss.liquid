/* Testimonials */
.card-wrapper {
    .card-details {
        font-size: 0.9em;
          
    }
    .card-img {
        margin-bottom: 18px;
    }
    .title , .pretitle {       
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #14aaa1;
        font-size: 24px;
        font-size: 2.4rem;
    }
    .pretitle {
        font-size: 20px;
        font-size: 2rem;
    }
}

#testimonials {
    li {
        margin-bottom: 24px;
        padding-bottom: 24px;
        border-bottom: 1px dotted #ccc;
        .card-wrapper {
            .card-thumb {
                img {
                    width: 100%;
                }
            }
            .card-details {
                .content-snippet {
                    font-family: Overlock, cursive;
                    font-style: italic;
                    font-size: 1.3em;
                }
                .snippet-meta {
                    font-weight: 300;
                }
            }

        }
        &:last-child {
            border-bottom: 0;
        }
     
    }

}
#testimonial-carousel{
    .card-wrapper {
        font-size: 24px;
        color: #fff;
        text-shadow: 1px 1px 1px rgba(0,0, 0, 0.5);
        padding: 0;
        min-height: 160px;
        
        .content-snippet {
            font-family: Overlock, cursive;
            font-style: italic;
            font-size: 31px;
            line-height: 1.2em;
            margin-bottom: 18px;
            letter-spacing: -1.5px;
            
        }
    }
    a, a:visited, a:active, a:focus {
        color: #fff !important;
    }
    a:hover {
        color: #fff;
        text-decoration: underline;
    }
    
}

#testimonial-carousel .card-wrapper .card-details .snippet-meta {
	font-size: 20px;
}

@media (min-width: 768px) {
    .navbar-collapse {
        padding-right: 0;
    }
	#testimonial-carousel {
        .card-wrapper {
            font-size: 32px;
            font-size: 3.2rem;
            
            .content-snippet {                
                font-size: 35px;
                font-size: 3.5rem;
                
            }            
        }
	}
}

.sidebar {
    #testimonial-carousel {
        min-height: 300px;;
        text-align: center;
        .card-wrapper {
            font-size: 14px;
            color: #666;
            text-shadow: none;
            /*text-shadow: 1px 1px 1px rgba(0,0, 0, 0.5);*/
            padding: 0;
            min-height: 160px;
            
            .content-snippet {
                font-family: Overlock, cursive;
                font-style: italic;
                font-size: 20px;
                line-height: 1.2em;
                margin-bottom: 6px;
                letter-spacing: 0.5px;
                
            }
        }
        a, a:visited, a:active, a:focus {
            color: $link-color !important;;
        }
        a:hover {
            color: $link-color-hover !important;
            text-decoration: none;
        }        
    }
    .snippet-meta {
        padding-top: 8px;
        span {
            display: block;
            line-height: 1.3em;
            &.dash {
                display: none;
                visibility: hidden;
            }
        }
    }
    #testimonial-carousel .card-wrapper .card-details .snippet-meta {
        font-size: 14px;
    }
    
}


.scroll-next-button {
    position: absolute;
    width: 100px;
    height: 40px;
    margin: 0 auto;
    bottom: 0;
    z-index: 10;
    background-color : rgba(255,255,255, 0.9);
    left: 49%;
    text-align: center;
    @include radius(10px 10px 0 0);
    span{
        padding: 6px;
        display: block;
        &::after {
            content: '\f107';
            font-family: FontAwesome;
            font-size:  2.2em;
            color: #666 !important;

        }
        &:hover {
            padding: 3px;
            &::after {
                content: 'Scroll Down';
                text-transform: uppercase;
                font-family: inherit;
                font-size: 0.5em;
                color: #666 !important;
            }

        }        
    }
    
}
