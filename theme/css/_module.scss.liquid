
.full-wrapper {
    padding-left: $theme-padding-primary;
    padding-right: $theme-padding-primary;
    
    @media  screen and (min-width: $screen-lg-max) {
        padding-left: $media-lg-theme-padding-primary;
        padding-right: $media-lg-theme-padding-primary;        

    }
    @media  screen and (min-width: $screen-xl-max) {
        padding-left: $media-xl-theme-padding-primary;
