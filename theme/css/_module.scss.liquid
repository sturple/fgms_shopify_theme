}


/**************** Top header bar ****************/

#header-top-nav-parent {
    background-color: #0650A7;
    color: #fff;
    text-transform: uppercase;

    @include a-border(#fff,transparent, #fff, #fff ,'',':not(.icons):not(.icon):not(.btn)');
    .section-nav { 
        background-color: #0650A7;
        padding: 0 $theme-padding-secondary 0 $theme-padding-primary;
    }
    .section-account {
        background-color: #103869;
        padding: 15px $theme-padding-primary 15px $theme-padding-secondary;
        
        .have-items-in-cart i {
            color: $link-color-hover !important;
        }
        i {            
             font-size: 1.2em;
         }         
        .cart-account-icon {
            margin-right: 12px;
            &:hover {
                text-decoration: none;
            }
        }
        .social-icons {
            margin-left: 12px;
            @include a(#fff,none,$link-color-hover,none);
            i {
                margin-left: 2px;
               
            }            
        }

    }
    .nav-utility {
        li {
            display: block;
            float: left;
            height: 100%;
            
        }
        &:after {
            display: table;
            content: " ";
            clear: both;            
        }
    }
    &:after {
        display: table;
        content: " ";
        clear: both;
    }
    a {
        color: #fff;
    }
    

    
    @media screen and (min-width: $screen-sm-max) {
        @include flexbox();
         
        .section-nav {
            align-self: center;
            justify-content: flex-start;        
            flex-grow: 1;               
            padding: 0 $media-lg-theme-padding-secondary 0 $media-lg-theme-padding-primary;
        }
        .section-account {
            align-self: center;
            justify-content: flex-end;            
            padding: 15px $media-lg-theme-padding-secondary 15px $media-lg-theme-padding-secondary;        
        }        
    }
    @media  screen and (min-width: $screen-lg-max) {
         .top-action-links{
            font-size: 1.2em;
        }     
        .section-nav {                 
                       
            padding: 0 $media-lg-theme-padding-secondary 0 $media-lg-theme-padding-primary;
        }
        .section-account {
                       
            padding: 15px $media-lg-theme-padding-secondary 15px $media-lg-theme-padding-secondary;        
        }
    }
    @media  screen and (min-width: $screen-xl-max) {
        .section-nav { 
            padding: 0 $media-xl-theme-padding-secondary 0 $media-xl-theme-padding-primary;
        }
        .section-account {
            padding: 15px $media-xl-theme-padding-primary 15px $media-xl-theme-padding-secondary;        
            .social-icons {
                margin-left: 45px;
                i {
                    margin-left: 15px;
                }
            }       
        }
    }    
}

#header-top-parent {
    .row {
        @include flexbox();
