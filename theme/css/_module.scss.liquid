
.full-wrapper {
    padding-left: $theme-padding-primary;
    padding-right: $theme-padding-primary;
}


/**************** Top header bar ****************/

#header-top-nav-parent {
    background-color: #0650A7;
    color: #fff;
    text-transform: uppercase;
    @include flexbox();
    .section-nav {        
        align-self: center;
        justify-content: flex-start;        
        flex-grow: 1;        
        background-color: #0650A7;
        padding: 0 $theme-padding-secondary 0 $theme-padding-primary;
    }
    .section-account {
        align-self: center;
        justify-content: flex-end;
        background-color: #103869;
        padding: 15px $theme-padding-primary 15px $theme-padding-secondary;
        .cart-account-text {
            margin-left: 12px;
        }
        .social-icons {
            margin-left: 45px;
            i {
                margin-left: 15px;
                font-size: 1.2em;
            }            
        }

    }
    .nav-utility {
        li {
            display: block;
            float: left;
            height: 100%;
            
        }
        &:after {
            display: table;
            content: " ";
            clear: both;            
        }
    }
    &:after {
        display: table;
        content: " ";
        clear: both;
    }
    a {
        color: #fff;
    }

}




.home-page-content {
    position: relative;
    margin: $theme-padding-primary 0px;
    
    @include radius(10px);
    padding: $theme-padding-primary;
    &.minify-top-padding {
        padding-top: 12px;
    }
    
    h1, .h1 {
        margin-bottom: 0px;
    }

    .intro-text {
        font-size: 1.5em;
        font-weight: 700;
    }
    p {
        font-size: 1.3em;
        text-align: left;
        margin-bottom: $theme-padding-secondary-half;
        line-height: 1.4em;
    }
    &.secondary {
        h1,.h1 {
            color: #fff;
            font-family: Overlock;
            font-weight: 400;
            margin-bottom: $theme-padding-secondary;
        }
        margin: 0;
        p {
            text-align: center;
        }
        
    }    
}
.modular {

    .h2 { padding-top: 0;}
    
    &.modular-slideshow-home {
        min-height: 980px
    }
    
    &.modular-book-now{
        text-align: center;
        background-color: #2D6BB4;
        color: #fff;
        @include box-shadow();
     
       
    }
    
    &.modular-testimonials {
        text-align: center;
        padding-top: $theme-padding-secondary;
        padding-bottom: $theme-padding-secondary;
        background-color: #16478F;
        @include box-shadow();
        
    }
    
    &.modular-gallery {
        min-height: 400px;
        padding: 0;
        text-align: center;
       
    }
    
    &.modular-learn-more {
        min-height: 400px;
        text-align: center;
        padding-top: $theme-padding-secondary;
        padding-bottom: $theme-padding-secondary;
        .home-page-content {
            padding: $theme-padding-primary $theme-padding-primary 170px ;
            &.minify-top-padding {
                padding-top: 12px;
            }            
        }
        .tripadvisor-widget {
            position: absolute;
            width: 100%;
            left: 0;
            bottom: -70px;
            height: auto;
        }
    }
    &.modular-boats {
        text-align: center;
        padding-top: $modular-padding-top;
        padding-bottom: $modular-padding-bottom;
        .h2 {
            padding-top: 0;
        }
    }
    &.modular-tagline {
        text-align: center;
        background-color: #2D6BB4;
        color: #fff;
        @include box-shadow();
        blockquote {
            margin: 0;
        }
    }
}

.opacity-ffffff {
    background-color: rgba(255,255,255,0.8);
}





.home-action-buttons {
    a {
        margin: $theme-padding-secondary $theme-padding-secondary-half 0;
    }
    &.blue {
        a.btn-secondary {
            border-color: $heading-color ;
            color: $heading-color !important;
            &:hover {
                background-color: $heading-color ; 
                color: #fff !important;;
            }
        }
    
    }
}
.home-photo-row {
    padding-top: $theme-padding-secondary-half;
}


