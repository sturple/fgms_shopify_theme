            padding: 0;
            min-height: 160px;
            
            .content-snippet {
                font-family: Overlock, cursive;
                font-style: italic;
                font-size: 20px;
                line-height: 1.2em;
                margin-bottom: 6px;
                letter-spacing: 0.5px;
                
            }
        }
        a, a:visited, a:active, a:focus {
            color: $link-color !important;;
        }
        a:hover {
            color: $link-color-hover !important;
            text-decoration: none;
        }        
    }
    .snippet-meta {
        padding-top: 8px;
        span {
            display: block;
            line-height: 1.3em;
            &.dash {
                display: none;
                visibility: hidden;
            }
        }
    }
    #testimonial-carousel .card-wrapper .card-details .snippet-meta {
        font-size: 14px;
    }
    
