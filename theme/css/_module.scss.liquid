/* Testimonials */
.card-wrapper {
    .card-details {
        font-size: 0.9em;
          
    }
    .card-img {
        margin-bottom: 18px;
    }
    .title , .pretitle {
        font-family: 'Luckiest Guy';
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #14aaa1;
        font-size: 24px;
        font-size: 2.4rem;
    }
    .pretitle {
        font-size: 20px;
        font-size: 2rem;
    }
}

#testimonials {
    li {
        margin-bottom: 24px;
        padding-bottom: 24px;
        border-bottom: 1px dotted #ccc;
        .card-wrapper {
            .card-thumb {
                img {
                    width: 100%;
                }
            }
            .card-details {
                .content-snippet {
                    font-family: Overlock, cursive;
                    font-style: italic;
                    font-size: 1.3em;
                }
                .snippet-meta {
                    font-weight: 300;
                }
            }

        }
        &:last-child {
            border-bottom: 0;
        }
     
    }

}
#testimonial-carousel{
    .card-wrapper {
        font-size: 24px;
        color: #fff;
        text-shadow: 1px 1px 1px rgba(0,0, 0, 0.5);
        padding: 0;
        min-height: 140px;
        
        .content-snippet {
            font-family: Overlock, cursive;
            font-style: italic;
            font-size: 31px;
            line-height: 1.2em;
            margin-bottom: 18px;
            letter-spacing: -1.5px;
            
        }
    }
    a, a:visited, a:active, a:focus {
        color: #fff !important;
    }
    a:hover {
        color: #fff;
        text-decoration: underline;
    }
    
}

#testimonial-carousel .card-wrapper .card-details .snippet-meta {
	font-size: 20px;
}

@media (min-width: 768px) {
    .navbar-collapse {
        padding-right: 0;
    }
	#testimonial-carousel {
        .card-wrapper {
            font-size: 32px;
            font-size: 3.2rem;
            
            .content-snippet {                
                font-size: 35px;
                font-size: 3.5rem;
                
            }            
        }
	}
}
