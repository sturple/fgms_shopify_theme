#blogArticles, .media-kit{
	li {
		margin-bottom: 32px;
		padding-bottom: 32px;
		border-bottom: 1px dotted #aaa;

		&:last-child {border-bottom: none;}
	
		h2 {
			color: $link-color;			
			&:hover {color: $link-color-hover;}
			padding-top: 0;
			font-size: 1.8em;
			text-transform: none;
			font-weight: normal;
			margin-bottom: 32px;
		}
		.blog-index-image-full {			
			@include box-shadow(1px 1px 12px 0px rgba(0,0,0,0.1));                
			border: 1px solid rgba(0,0,0,0.2);		
			overflow: hidden;
			display: block;
			margin-bottom: 8px;				
			img {
				width: 100%;
				max-width: 400px;				
				@include transition(0.5s);
        @include transform-scale(1,1);				
			}
			&:hover {
					
				img {
					@include transition(0.5s);
          @include transform-scale(1.1,1.1);  
				}
			}
		}
		.article-date {
			margin-bottom: 12px;;
			padding-bottom: 12px;
			border-bottom: 1px dotted #ccc;
		}
		
	}
	
}

.article-blog-post-heading{
	@include font-size(1.8);
	color: #827366;		
	line-height: 2em;
	
	
}
article {
	h1.article-title{
		@include font-size(3);		
		margin-bottom: 24px;
		padding-top: 24px;
	}
	#commentsTitle {margin-top: -18px;}
	
	.subtitle {
		
		@include font-size(2);
		margin: -30px 0 32px;
		
	}
	
	.article-date{
		@include font-size(1.5);
		margin-bottom: 12px;
		
		
	}
	.article-image {
		img {
			
			@include box-shadow(1px 1px 12px 0px rgba(0,0,0,0.1));                
			border: 1px solid rgba(0,0,0,0.2);	
		}
	}
	.article-summary {
		
		h2 {

	
		}
		.article-excerpt {
			
			font-style: italic;
			&:after {
				display: block;
				content: " ";
				margin-bottom: 18px;
			}
		}
		
		
	}
	.article-footer {
		
		@include font-size(1.4);
		.btn {margin-bottom: 4px; margin-right: 4px; } 
		
	}
	.learn-more-link {
		font-style: normal;
		color:red;
		&:hover {color: $link-color-hover;}
		i {
			margin-left: 4px;
			@include font-size(2.1);			
			padding-top: 1px;
			&:hover {}
		}
	}
	.comment-link {line-height:2.6em;}
	.articlePostedIn {
		
	}
	#articleContent {
		margin-bottom: 42px;
	}
	.comment-buton-header {
		margin-bottom: 24px;
	}

	
	.image-framed{
		margin: 24px 0; 
		&.center {margin: 24px auto ;}
		max-width: 560px;
		img {
			background-color: #fff;
			padding: 12px;
			@include box-shadow(2px 2px 4px rgba(0,0,0,0.15));
			max-width: 560px;
			width: 100%;			
			border: 0;
		}
		
		div {
			padding: 12px 8px 0;
			
			text-align: center;
			font-size: .85em;
			font-style: italic;
		}

	
	}
}

.article-row, .article-heading{
	a {
		font-weight: normal;
	}
	.h4,h4,.h1, h2, .h2,h3, .h3 {
		&:before {
			font-weight: normal;
			font-family: FontAwesome;			
			display: inline;	
			margin-right: 12px;	
			content: " ";
		}
	}
	.h1 {
		&:before {
			font-size: 0.6em;
			position: relative;
			top: -5px;			
		}
	}	
	h2, h3, .h3 {
		&:before {
			font-size: 0.8em;
			position: relative;
			top: -1px;			
		}
	}		
	.h4,h4, .h3, h3 {
		&:before {			
			font-size:  0.95em;
			color: $link-color;
		}
	}	
	&.posts h4:before, &.posts .h1:before,&.posts h2:before, &.posts h3:before, &.posts .h3:before {
		content: "\f0f6";
	}
	&.media-clippings h4:before,&.media-clippings .h1:before,&.media-clippings h2:before, &.media-clippings h3:before, &.media-clippings .h3:before {
		content: "\f0a1";
	}
	&.news-releases h4:before, &.news-releases .h1:before,&.news-releases h2:before, &.news-releases h3:before, &.news-releases .h3:before{
		content: "\f13d";
	}
	.latest-post {
		margin-left: 24px;
		line-height: 1.3em;
		&:before {
			margin-left: -24px;	
		}
	}
}

