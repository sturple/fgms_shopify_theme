/* accordion */
.panel-group {
  
  .panel {
    border-radius: 0px;
		border-color: rgba(255,255,255,1);;
    background-color: rgba(255,255,255,0.65);
		&.panel-blank {
			background-color: transparent;
			border: none;
		}
  }
  .panel-heading {
    @include radius(0); 
   }
  .panel-title {
    padding-top: 0;
		text-transform: uppercase;
  }
  &.panel-group-arrow {
    h4 {
      font-weight: normal;
			margin-left: 24px;
      
    }
    p {
     font-size: 0.9em;
    }
    > div > div {
      margin-bottom: 32px;    
			background-color: rgba(255,255,255,0.45);
			padding: 18px;
			@include box-shadow(1px 1px 12px 0px rgba(0,0,0,0.1));
			@include radius(10px);
			
    }
    a.collapse-trigger {
				
				&::before {
          content:"\f0da";
          font-family: FontAwesome;
          
					@include transform(rotate(90deg));
					@include transition(all 0.25s linear);
          display: inline-block;
					position: absolute;
					left: 24px;
					
        }
        &:hover {
          text-decoration: none;
        }
        &.collapsed:before {
					
					@include transform(rotate(0deg));			
				}	    
    }
  }
}



