.modal-header img {
  max-width: 310px;
}
.modal-body h2 { padding-top: 0px;}

/* Carousel */

.carousel-fade {
    .carousel-inner {
        .item {
            transition-property: opacity;
        }
        
        .item,
        .active.left,
        .active.right {
            @include opacity(0);
        }

        .active,
        .next.left,
        .prev.right {
            @include opacity(1);
        }

        .next,
        .prev,
        .active.left,
        .active.right {
            left: 0;
            transform: translate3d(0, 0, 0);
        }
    }
    .carousel-control {
        z-index: 2;
    }
	
}




.btn-default, .summit {
	border: $btn-default-border;
	font-family: $btn-font-family;
	color: $btn-default-color-hover;	
	@include btn-template($btn-default-color,$btn-default-background, $btn-default-padding,$btn-default-radius,$btn-default-box-shadow);
	border: 1px solid #ccc;
	&:hover, &:focus, &:active, &.active, &.disabled, &[disabled] {
		@include btn-template-hover($btn-default-background-hover !important);
		color: $btn-default-color-hover;
	}
