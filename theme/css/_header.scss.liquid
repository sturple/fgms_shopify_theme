#header-top-parent {
    z-index: 999;
    background-color: rgba(255,255,255,0.75);
    @include transition(0.2s);
    &:hover {
        @include transition(0.8s);
        background-color: rgba(255,255,255,1);
    }
	

}


.search-header {
  button {
    line-height: 18px;
    background: rgba(255,255,255,1);
    border: 1px solid #fff;
    padding: 8px 12px;
    @include radius(4px !important) ;
    margin-left: -4px !important;
    i {
      color: $link-color;
    }

    &:hover {
      i {
        color: $link-color-hover;
      }
    }
  }
  input {
    padding: 6px;
    font-size: 17px;
    line-height: 22px;
    border: 1px solid #fff;
    font-weight: 300;

  }
  .searchbox-close {			
    input {
      @include transition(0.4s);
      width: 0 !important;
    /*	@include transform-scale(0,1);*/
      padding: 6px 0;					
    }

  }
  .searchbox-open  {

    button {
      margin-left : 0px !important;				
      @include radius(0 4px 4px 0 !important) ;
    }
    input {
      @include transition(0.7s);
      /*@include transform-scale(1,1);*/
      width: 225px !important;

    }

  }		
}


#header-top-parent {
  position: relative;

  @include box-shadow(0px 2px 59px 0px rgba(0,0,0,0.2));
  .row {
      @include flexbox();
      flex-flow: column;
  }
  .header-logo {
      align-self: center;
      
      img {
          @include transition(0.75s);
          @include transform-scale(1,1); 
          max-width: 210px;;
					padding: $theme-margin-base $theme-margin-base $theme-margin-base;
          width: 100%;
      }
  }
  &.sticky-scroll-up{
    background-color: rgba(255,255,255,0.95);
  }

  

	@media  screen and (min-width: $screen-md-max) {
			.row  {
					@include flexbox();
					flex-flow: row;
			}
			.header-logo {
					align-self: flex-start;
					img {
							max-height: 100%;
					}
			}        
	}
}

.page-frontpage {

	@media  screen and (min-width: $screen-md-max) {
		#header-top-parent{
			width: 100%;
			position: absolute;		
		}	
	}
}
