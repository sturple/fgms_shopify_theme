{% assign primary_blog = settings.blog-primary | default: 'news' %}
{% assign blog_title = blogs[primary_blog].title %}
{% capture blog_url %}{{shop.url}}{{blogs[primary_blog].url}}{% endcapture %}
{% assign articles_all = blogs[primary_blog].articles  %}

{% if blogs['media-clippings'] %}
  {% assign media_clippings_title = blogs['media-clippings'].title %}
  {% assign articles_all = articles_all | concat: blogs['media-clippings'].articles  %}
{% endif %}

{% if blogs['news-releases'] %}
  {% assign news_releases_title = blogs['news-releases'].title %}
  {% assign articles_all = articles_all | concat: blogs['news-releases'].articles %}
{% endif %}

{% if search.terms %}
  {% assign archive_terms = search.terms | split: '--' %}
  {% assign archive_terms_size = archive_terms | size %}
  {% if archive_terms_size > 2  and archive_terms[0] == 'archives' %}
    {% assign archive_month = archive_terms[1] | capitalize %}
    {% assign archive_year = archive_terms[2] %}   
  {% endif %}
{% endif %}  
{% if hide_articles %}
{% else %}
{% assign articles_all = articles_all | sort: 'published_at' | reverse %}
{% endif %}
