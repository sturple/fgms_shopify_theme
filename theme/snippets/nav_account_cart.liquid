<ul id="utilityNav" class="" style="margin-bottom: 0">   
	{% if shop.customer_accounts_enabled %}
	<li{% if customer %} class="active"{% endif %}>
	  
	  {{ '<div class="pull-left icon-your-account shopify-sprite display-none-480"><i class="fa fa-cogs"></i></div>' | customer_login_link }}
		<div class="pull-right" >							
		  <div id="cart-bar-your-account" class="heading">Your Account</div>
		  <div id="cart-bar-login" class="">
		  {% if customer %}
			  <strong>{{ "Logout" | customer_logout_link }}</strong> or
			  <span ><a href="/account" title="Account">Account</a></span>
	  
		  {% else %}
			<strong>{{ "Login" | customer_login_link }}</strong> or 
			<strong>{{"Join" | customer_register_link}}</strong>
		  {% endif %}
		  </div>
		</div>
		<div class="clearfix" style="clear: both;"></div>
	</li>

	{% endif %}
	<li id="cartLinkWrapper">
		<a href="/cart" id="cartLink">
			{% if shop.customer_accounts_enabled %}<div class="pull-left " id="cartLinkBorder"></div>{% endif %}
			<div class="icon-your-cart shopify-sprite pull-left display-none-480"><i class="fa fa-shopping-cart"></i></div>
			<div class="pull-right" >
				<div class="your-cart-text heading" > Your Cart</div>
				<div id="yourCart" class="">{{ cart.item_count }} {% if cart.item_count == 1 %}Item{% else %}Items{% endif %}  </div>
			</div>
			<div class="clearfix" style="clear: both;" ></div>
		  </a>
	</li>
	<li class="clearfix" style="clear:both"></li>
</ul><!-- utilityMenu -->
<div class="clearfix" style="clear: both"></div>