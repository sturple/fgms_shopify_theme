<form class="navbar-form search-{{location | default: 'normal'}}" action="{{shop.url}}/search" >
  <div class="input-group {% if search.terms %}searchbox-open{% else %}searchbox-close{% endif %}">
    <input type="search" name="q" 
           class="form-control search-bar " 
           autocomplete="off" 
           placeholder="{{ 'navigation.search.search-form-placeholder' | t }}" value="{{ search.terms }}">

    <span class="input-group-btn">
      <button type="submit" class="btn"  ><i class="fa fa-search" aria-hidden="true"></i></button>
    </span>
  </div>
</form>